.transaction-row
  padding 8px 0
  border-bottom 1px solid $borderColor
  display flex

  .transaction-date-cell
    width 10%

  .transaction-name-cell
    flex 1

  .transaction-value-cell
    text-align right
    width 15%

  .transaction-delete-cell
    width 10%

  .delete-transaction
    cursor pointer

  .transaction-date-cell,
  .transaction-delete-cell
    text-align center

